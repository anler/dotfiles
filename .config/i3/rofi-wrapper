#!/usr/bin/env sh

case "$1" in
  "window")
    rofi -show window -theme-str "#prompt { enabled: false; } #textbox-prompt-colon {str: \"ðŸ“Œ\";}"
    ;;
  "calc")
    rofi -show calc -theme-str "#prompt { enabled: false; } #textbox-prompt-colon {str: \"ðŸ’¯\";}"
    ;;
  "drun")
    rofi -show drun -theme-str "#prompt { enabled: false; } #textbox-prompt-colon {str: \"ðŸ¤–\";}"  -no-sort
    ;;
  "run")
    rofi -show run -theme-str "#prompt { enabled: false; } #textbox-prompt-colon {str: \"ðŸ‘»\";}"  -no-sort
    ;;
esac

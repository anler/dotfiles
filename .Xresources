!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------
Xft.autohint:   1
Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull

!-------------------------------------------------------------------------------
! URxvt settings
!-------------------------------------------------------------------------------
URxvt.modifier: mod1
URxvt*loginShell: true
URxvt*depth: 32
URxvt.borderless: true
URxvt*dynamicColors: on
URxvt.geometry: 90x20
URxvt.internalBorder: 30
URxvt.lineSpace: 1
URxvt.saveLines: 20000
URxvt*termName: xterm-256color
URxvt.transparent: false
URxvt.visualBell: false

! disable ctrl+shift binding
URxvt.iso14755:             false
URxvt.iso14755_52:          false

! Perl extension
URxvt.perl-ext:
URxvt.perl-ext-common: default,matcher,font-size,tabbedex
urxvt.matcher.button:  C1

! Tabbedex features
URxvt.tabbed.new-button:       no
URxvt.tabbed.autohide:         yes
URxvt.tabbed.no-tabbedex-keys: yes

! Tabbedex colors
URxvt.tabbed.tabbar-fg:   244
URxvt.tabbed.tabbar-bg:   16
URxvt.tabbed.tab-fg:      255
URxvt.tabbed.tab-bg:      53
URxvt.tabbed.bell-tab-fg: 255
URxvt.tabbed.bell-tab-bg: 160
URxvt.tabbed.bell-fg:     244
URxvt.tabbed.bell-bg:     17
URxvt.tabbed.title-fg:    28
URxvt.tabbed.title-bg:    16

! Tabbedex keybindings (4-1: Super + Alt)
URxvt.keysym.M-C-t:     perl:tabbedex:new_tab
URxvt.keysym.M-C-p:     perl:tabbedex:prev_tab
URxvt.keysym.M-C-n:     perl:tabbedex:next_tab
URxvt.keysym.M-C-r:     perl:tabbedex:rename_tab

!! Change font size on Control-Plus/Minus
URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease
URxvt.keysym.C-S-Up:   font-size:incglobal
URxvt.keysym.C-S-Down: font-size:decglobal
URxvt.keysym.C-equal:  font-size:reset
URxvt.keysym.C-slash:  font-size:show

!! Fonts
#define fonts xft:Iosevka Slab:size=14,xft:Inconsolata,xft:Symbola,xft:EmojiOne Color,xft:Noto Color Emoji
URxvt.font:       fonts
URxvt*boldFont:   fonts
URxvt*boldMode:   true
! Fix font space
URxvt*letterSpace:          1   ! https://github.com/powerline/fonts/issues/176#issuecomment-240252912

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Cursor
URxvt.cursorBlink:          false
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         false

